  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

    <title>
      {{title}} &middot; {{appTitle}} &middot; Holder de ord
    </title>

    <meta property="og:title"      content="{{title}} - {{appTitle}} - Holder de ord" />
    <meta name="twitter:title"     content="{{title}} - {{appTitle}} - Holder de ord" />

    <meta property="og:site_name"  content="{{appTitle}}" />
    <meta property="fb:app_id"     content="{{facebookAppId}}" />
    <meta property="og:type"       content="website" />
    <meta property="og:url"        content="{{absoluteUrl}}" />
    <meta property="og:image"      content="{{imageUrl}}" />

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:image:src" content="{{imageUrl}}">
    <meta name="twitter:image" content="{{imageUrl}}">

    <meta name="description"          content="{{appDescription}}">
    <meta property="og:description"   content="{{appDescription}}">
    <meta name="twitter:description"  content="{{appDescription}}">

    <meta name="author" content="Holder de ord">
    <meta name="copyright" content="Holder de ord">
    <meta name="twitter:site" content="@holderdeord">
    <meta name="twitter:creator" content="@holderdeord">

