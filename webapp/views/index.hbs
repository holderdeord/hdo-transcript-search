    <link rel="search" type="application/opensearchdescription+xml" href="/opensearch"/>
    {{#feedUrl}}<link rel="alternate" type="application/rss+xml" title="Innlegg om «{{../focused}}»" href="{{.}}">{{/feedUrl}}

    <link rel="stylesheet" href="/{{bundleName}}.css">

    {{#if settings.analytics}}<script type="text/javascript" src="/analytics.js"></script>{{/if}}
  </head>

  <body data-title="{{appTitle}}"
        data-description="{{appDescription}}"
        data-facebook-app-id="{{facebookAppId}}"
